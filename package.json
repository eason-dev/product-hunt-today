{
	"name": "product-hunt-today",
	"version": "2.0.0",
	"description": "Twitter bot that posts daily trending Product Hunt products as videos",
	"type": "module",
	"packageManager": "pnpm@10.13.1",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=10.0.0"
	},
	"scripts": {
		"start": "remotion preview src/index.tsx",
		"build:yesterday": "remotion render src/index.tsx ProductHuntToday out/yesterday-video.mp4 --timeout 1000000",
		"upgrade": "remotion upgrade",
		"server": "ts-node server.tsx",
		"test": "eslint src --ext ts,tsx,js,jsx && tsc",
		"fetch:yesterday": "zx scripts/fetchProductHunt.mjs",
		"fetch:midday": "MIDDAY_POST=true zx scripts/fetchProductHunt.mjs",
		"build:midday": "MIDDAY_POST=true remotion render src/index.tsx ProductHuntToday out/midday-video.mp4 --timeout 1000000",
		"post-tweet": "zx scripts/postTweet.mjs",
		"post-tweet:midday": "MIDDAY_POST=true zx scripts/postTweet.mjs",
		"midday": "pnpm run fetch:midday && pnpm run build:midday && pnpm run post-tweet:midday",
		"lint": "eslint src --ext ts,tsx,js,jsx",
		"lint:fix": "eslint src --ext ts,tsx,js,jsx --fix"
	},
	"repository": {},
	"license": "UNLICENSED",
	"dependencies": {
		"@remotion/bundler": "^4.0.325",
		"@remotion/cli": "^4.0.325",
		"@remotion/gif": "^4.0.325",
		"@remotion/google-fonts": "^4.0.325",
		"@remotion/motion-blur": "^4.0.325",
		"@remotion/noise": "^4.0.325",
		"@remotion/paths": "^4.0.325",
		"@remotion/renderer": "^4.0.325",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/line-clamp": "^0.4.4",
		"autoprefixer": "^10.4.21",
		"date-fns": "^4.1.0",
		"date-fns-tz": "^3.2.0",
		"dotenv": "^17.2.0",
		"eslint": "^9.31.0",
		"express": "^5.1.0",
		"postcss": "^8.5.6",
		"postcss-loader": "^8.1.1",
		"postcss-preset-env": "^10.2.4",
		"prettier": "^3.6.2",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"remotion": "^4.0.325",
		"tailwindcss": "^4.1.11",
		"ts-node": "^10.9.2",
		"twitter-api-v2": "^1.24.0",
		"typescript": "^5.8.3",
		"zx": "^8.7.1"
	},
	"devDependencies": {
		"@babel/core": "^7.28.0",
		"@babel/eslint-parser": "^7.28.0",
		"@babel/preset-react": "^7.27.1",
		"@eslint/js": "^9.31.0",
		"@tailwindcss/postcss": "^4.1.11",
		"@types/express": "^5.0.3",
		"@types/node": "^24.0.15",
		"@types/react": "^19.1.8",
		"@types/web": "^0.0.250",
		"@typescript-eslint/eslint-plugin": "^8.37.0",
		"@typescript-eslint/parser": "^8.37.0",
		"css-loader": "^7.1.2",
		"eslint-config-eason": "^0.0.12",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-html": "^8.1.3",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.5.3",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"style-loader": "^4.0.0"
	}
}
